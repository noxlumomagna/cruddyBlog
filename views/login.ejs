<html>

<head>
  <title>Sign in</title>
  <link rel="stylesheet" href="../logreg.css" />
</head>

<body>
  <div class="container" id="container">
    <div class="form-container sign-in-container">
      <form id="signin-form">
        <h1>Sign in</h1>
        <input type="email" placeholder="Email" id="signin-email" autocomplete="off" />
        <input type="password" placeholder="Password" id="signin-password" autocomplete="off" />
        <button type="submit" id="sign-in-button">Sign In</button>
        <label for="error" id="signin-error"></label>
      </form>
    </div>

    <div class="overlay-container">
      <div class="overlay">
        <div class="overlay-panel overlay-right">
          <h1>Welcome Back!</h1>
          <p>Enter your credentials to go in</p>
          <p>
            Don't have an account?<br /><u><a href="/auth/register" style="color: white">Sign up</a></u>
          </p>
        </div>
      </div>
    </div>
  </div>
  <script src="../login.js"></script>
</body>

</html>