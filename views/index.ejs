<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/nav.ejs') %>
            <div class="blogs content">
                <h2>All Blogs</h2>
                <% blogs.forEach(element=> { %>
                    <a class="single" href="/blogs/<%= element._id %>">
                        <h3>
                            <%= element.title %>
                        </h3>
                        <p>
                            <%= element.snippet %>
                        </p>
                    </a>
                    <% }); %>
            </div>

            <%- include('../partials/footer.ejs') %>
    </body>

</html>