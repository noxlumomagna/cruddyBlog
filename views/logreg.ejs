<html>

<head>
  <title>Sign Up / Sign in</title>
  <link rel="stylesheet" href="../logreg.css" />
</head>

<div class="container <%= rightSide %>" id="container">
  <div class="form-container sign-up-container">
    <form id="signup-form">
      <h1>Register</h1>
      <input type="text" placeholder="Name" name="name" required autocomplete="off" id="signup-name" />
      <input type="email" placeholder="Email" name="email" required autocomplete="off" id="signup-email" />
      <input type="password" placeholder="Password" name="password" autocomplete="off" required id="signup-password" />
      <button type="submit" id="sign-up-button">Sign Up</button>
      <label for="error" id="signup-error"></label>
    </form>
  </div>
  <div class="form-container sign-in-container">
    <form id="signin-form">
      <h1>Login</h1>
      <input type="email" placeholder="Email" name="email" autocomplete="off" id="signin-email" required />
      <input type="password" placeholder="Password" name="password" autocomplete="off" id="signin-password" required />
      <button type="submit" id="sign-in-button">Sign In</button>
      <label for="error" id="signup-error"></label>
    </form>
  </div>
  <div class="overlay-container">
    <div class="overlay">
      <div class="overlay-panel overlay-left">
        <h1>Hello</h1>
        <p>Create your credentials for access</p>
        <button class="ghost" id="signIn">Sign In</button>
      </div>
      <div class="overlay-panel overlay-right">
        <h1>Welcome Back !</h1>
        <p>Enter your credentials for access</p>
        <button class="ghost" id="signUp">Sign Up</button>
      </div>
    </div>
  </div>
</div>
<script src="../logreg.js"></script>

</html>